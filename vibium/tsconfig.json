{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./helpers/*"]
    },
    "outDir": "./dist"
  },
  "include": ["helpers/**/*.ts", "types/**/*.d.ts", "tests/**/*.ts", "vitest.config.ts", "config/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
