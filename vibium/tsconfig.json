{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2020",
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./helpers/*"]
    },
    "outDir": "./dist"
  },
  "include": ["helpers/**/*.ts", "types/**/*.d.ts", "tests/**/*.ts", "vitest.config.ts", "config/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
