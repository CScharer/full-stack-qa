<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Mobile Browser Testing Suite" parallel="tests" thread-count="3" verbose="1">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.cjs.qa.utilities.GlobalRetryListener"/>
    </listeners>
    
    <test name="Mobile Browser Tests" preserve-order="true">
        <classes>
            <class name="com.cjs.qa.junit.tests.mobile.MobileBrowserTests"/>
        </classes>
    </test>
</suite>

